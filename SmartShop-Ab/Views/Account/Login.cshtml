@model SmartShop_Ab.Models.Login

@{
    ViewData["Title"] = "Login";
}

<body  style="background-image: url('https://img.freepik.com/premium-vector/e-commerce-icon-robotic-hand-internet-shopping-online-purchase-add-cart_127544-586.jpg?w=2000'); margin: 0px; background-repeat: no-repeat; background-size: cover;">
<br/>
<h2 class="text-info">Login to SmartShop</h2>
<br />
<hr />
<div class="border container" style="padding:30px;">
  <div class="form-group row ">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
            <div class="col-4">
                <label asp-for="UserId" class="control-label" style="color:red;"></label>
                 </div>
                <div class="col-6">
                <input asp-for="UserId" class="form-control" />
                </div>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
             <div class="form-group row">
            <div class="col-4">
                <label asp-for="Password" class="control-label" style="color:red;"></label>
                </div>
                <div class="col-6">
                <input asp-for="Password" class="form-control" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="Submit" value="Login" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a href="~/Account/SignUp" class="btn btn-success">Back to Registration</a>
            </div>
            </div>
        </form>
    </div>
</div>
</body>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

  @{
    try
    {
        if(TempData["msg"] !=null)
        {
            if(TempData["msg"] == "1")
            {
                <script>
                swal("Thank You!", "Logged In Sucecssfully!", "success");
                </script>
            }
            else
            {
                <script>
                swal("Error", "Incorrect UserId/Password", "error");
                </script>
            }
        }
    }
    catch
    {
        
    }
}
