@using SmartShop_Ab.Models
@model List<AddProduct>
@{
    ViewData["Title"] = "Cart";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Add Product List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="AddCart" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; Add to Cart </a>
    </div>
</div>
<div class="row">
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Product Name</th>
            <th>Brand Type</th>
            <th>Price</th>
            <th>Stock Count</th>
            <th></th>
             </tr>
        </thead>
        <tbody>
             @foreach (var item in Model)
            {
                <tr>
                
                <td>@item.ProductName</td>
                <td>@item.BrandType</td>
                <td>@item.Quantity</td>
                <td>@item.StockCount</td>
                <td>
                    <a asp-area="" asp-action="DeleteProduct" asp-controller="Dashboard" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
            }
            </tbody>
    </table>
</div>
<div class="row">
    <div class="col-6">
        <a asp-action="HomeIndex" asp-controller="Home" class="btn btn-success">Back to Home</a>
    </div>
    <div class="col-6 text-right">
        <h3>Total Amount</h3>
        <h3>Grant Total : @Model.Sum(c=>c.Quantity) </h3>
        <a asp-area="" asp-action="Checkout" asp-controller="Order" class="btn btn-info">Process to Checkout</a>
    </div>
</div>

