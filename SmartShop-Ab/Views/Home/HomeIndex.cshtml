@using SmartShop_Ab.Models;
@*@using X.PagedList.Mvc.Common*@
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<StockManagement>
@{
    ViewData["Title"] = "HomeIndex";
}

<br/><br/>
<div class="row">
     @foreach (var product in Model)
    {
         <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                         <label style="font-size: 23px;color: steelblue">@product.ProductName</label>
                        </h4>
                        </div>
                              <img src="~/@product.ProductImage" alt="Card Image" class="card-img-top" style="height: 300px;"/>
                              <div class="card-header">
                                  <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size: 20px;color: #a51313"><b>Price : @product.Quantity</b></label>
                        </div>
                        <a asp-action="HomeDetail" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-success pull-right btn-outline-info">Deatils</a>
                    </div>
                        </div>
                        </div>
                        </div>
    }
    </div>
    </body>
    <div>
    @Html.PagedListPager(Model,c=>Href("~/Home/HomeIndex?page="+c));
</div>
