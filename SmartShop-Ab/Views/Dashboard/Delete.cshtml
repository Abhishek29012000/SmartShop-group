@model SmartShop_Ab.Models.StockManagement

@{
    ViewData["Title"] = "Delete";
}

<br />

<h2 class="text-info">Product Delete</h2>
<form asp-action="Delete" method="post" enctype="multipart/form-data">
     <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                   <label asp-for="ProductName" class="control-label"></label>
                    </div>
                <div class="col-8">
               <input asp-for="ProductName" readonly="readonly" class="form-control"/>
                </div>
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
             <div class="form-group row">
                <div class="col-4">
                <label asp-for="Quantity" class="control-label"></label>
                </div>
                <div class="col-8">
                <input asp-for="Quantity"  readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            @*<div class="form-group row">
                <div class="col-4">
                <label asp-for="ProductImage" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="Id" />
                <input asp-for="ProductImage" readonly="readonly" class="form-control" type="file" />
                </div>
                <span asp-validation-for="ProductImage" class="text-danger"></span>
            </div>*@
            <div class="form-group row">
                <div class="col-4">
                <label asp-for="StockCount" class="control-label"></label>
                 </div>
                <div class="col-8">
               <input asp-for="StockCount" readonly="readonly" class="form-control"/>
                </div>
                <span asp-validation-for="StockCount" class="text-danger"></span>
            </div>
           <div class="form-group row">
                <div class="col-4">
                <label asp-for="MDate" class="control-label"></label>
                </div>
                <div class="col-8">
                <input asp-for="MDate"  readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="MDate" class="text-danger"></span>
            </div>
             <div class="form-group row">
                <div class="col-4">
                <label asp-for="EDate" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="Id" />
                <input asp-for="EDate" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="EDate" class="text-danger"></span>
            </div>
             <div class="form-group">
                 <h3>Do you want to delete this product ?</h3>
                 <input type="submit" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" value="Delete" />
                <a asp-action="StockIndex" class="btn btn-success">Back to List</a>
            </div>
            </div>
            <div class="col-1"></div>
        <div class="col-3">
            <img src="~/@Model.ProductImage" width="100%" height="250px" style="border-radius: 5px;border: 1px solid #efefef"/>
        </div>
       </div>
        </form>
        
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
