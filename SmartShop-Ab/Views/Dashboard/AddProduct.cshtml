@model SmartShop_Ab.Models.AddProduct

@{
    ViewData["Title"] = "AddProduct";
}

<body style="background-image: url('https://wpamelia.com/wp-content/uploads/2019/02/4k-wallpaper-architecture-background-1308624.jpg'); margin: 0px; background-repeat: no-repeat; background-size: cover;">
<br/>
<h2 class="text-info">Add a New Product</h2>
<br />
<hr />
<div class="border container" style="padding:30px;">
    <div class="form-group row">
        <form asp-action="AddProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
            <div class="col-4">
                <label asp-for="ProductName" class="control-label" style = "color: white"></label>
                 </div>
                <div class="col-6">
                <input asp-for="ProductName" class="form-control" />
                </div>
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group row">
            <div class="col-4">
                <label asp-for="BrandType" class="control-label" style = "color: white"></label>
                 </div>
                <div class="col-6">
                <input asp-for="BrandType" class="form-control" />
                </div>
                <span asp-validation-for="BrandType" class="text-danger"></span>
            </div>
            <div class="form-group row">
            <div class="col-4">
                <label asp-for="Quantity" class="control-label" style = "color: white"></label>
                 </div>
                <div class="col-6">
                <input asp-for="Quantity" class="form-control" />
                </div>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
             <div class="form-group row">
            <div class="col-4">
                <label asp-for="StockCount" class="control-label" style = "color: white"></label>
                 </div>
                <div class="col-6">
                <input asp-for="StockCount" class="form-control" />
                </div>
                <span asp-validation-for="StockCount" class="text-danger"></span>
            </div>
            <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="Submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a href="~/Dashboard/Add" class="btn btn-success">Back to List</a>
            </div>
        </div>
        </form>
    </div>
</div>
</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


@{
    try
    {
        if(TempData["msg"] !=null)
        {
            if(TempData["msg"] == "1")
            {
    <script>
                        swal("Thank You!", "Product Added Sucecssfully!", "success");
    </script>
            }
            else
            {
    <script>
                        swal("Error", "Add Product Failed", "error");
    </script>
            }
        }
    }
    catch
    {
        
    }
}
