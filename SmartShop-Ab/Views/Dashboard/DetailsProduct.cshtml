<body style="background-image: url('https://media.istockphoto.com/vectors/business-management-vector-id1198767576?k=20&m=1198767576&s=612x612&w=0&h=3PUE_um0lEZty7yvXuqo3ELx5uRCW2QVfAkvgzwHcpI='); margin: 0px;
background-repeat: no-repeat; background-size: cover;">

@model SmartShop_Ab.Models.AddProduct

@{
    ViewData["Title"] = "DetailsProduct";
}
<br />

<h2 class="text-info">Product Type Details</h2><div class="row">
        <form asp-action="DetailsProduct"  method="post">
            <div class="p-4 rounded border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
            <div class="col-4">
                <label asp-for="ProductName" class="control-label" style = "color: white"></label>
                 </div>
                <div class="col-6">
                <input asp-for="ProductName"  readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group row">
            <div class="col-4">
                <label asp-for="BrandType" class="control-label" style = "color: white"></label>
                 </div>
                <div class="col-6">
                <input asp-for="BrandType"  readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="BrandType" class="text-danger"></span>
            </div>
            <div class="form-group row">
            <div class="col-4">
                <label asp-for="Quantity" class="control-label" style = "color: white"></label>
                 </div>
                <div class="col-6">
                <input asp-for="Quantity"  readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
             <div class="form-group row">
            <div class="col-4">
                <label asp-for="StockCount" class="control-label" style = "color: white"></label>
                 </div>
                <div class="col-6">
                <input asp-for="StockCount"  readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="StockCount" class="text-danger"></span>
            </div>
            <div class="form-group">

            <a asp-action="EditProduct" asp-route-id="@Model.Id" class="btn  btn-primary">Edit</a>
            <a asp-action="Add" class="btn btn-success">Back to List</a>
            </div>
            </div>
        </form>
    </div>



</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
