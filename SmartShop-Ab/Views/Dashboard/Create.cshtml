@model SmartShop_Ab.Models.StockManagement

@{
    ViewData["Title"] = "Create";
}

<br />

<h2 class="text-info">Add Stock Management</h2>
        <form asp-action="Create" method="post" >
             <div class="p-4 rounded border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h3>@ViewBag.message</h3>
           <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductName"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProductName" class="form-control"/>
            </div>
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
            <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductImage" class="control-label"></label>
                </div>
            <div class="col-5">
                <input asp-for="ProductImage" class="form-control"type="file" />
                </div>
                <span asp-validation-for="ProductImage" class="text-danger"></span>
            </div>
            <div class="form-group row">
            <div class="col-2">
                <label asp-for="Quantity"></label>
            </div>
            <div class="col-5">
                <input asp-for="Quantity" class="form-control" />
            </div>
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
           <div class="form-group row">
            <div class="col-2">
                <label asp-for="StockCount"></label>
            </div>
            <div class="col-5">
                <input asp-for="StockCount" class="form-control"/>
            </div>
            <span asp-validation-for="StockCount" class="text-danger"></span>
        </div>
           <div class="form-group row">
            <div class="col-2">
                <label asp-for="MDate" class="control-label"></label>
                 </div>
            <div class="col-5">
                <input asp-for="MDate" class="form-control" />
                </div>
                <span asp-validation-for="MDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
            <div class="col-2">
                <label asp-for="EDate" class="control-label"></label>
                 </div>
            <div class="col-5">
                <input asp-for="EDate" class="form-control" />
                </div>
                <span asp-validation-for="EDate" class="text-danger"></span>
            </div>
            <div class="form-group row">          
            <input type="submit" class="btn btn-primary" value="Save" />
            <a asp-action="StockIndex" class="btn btn-success">Back to List</a>
            </div>
            </div>
        </form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
